{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "indent": 0,
        "no-tabs": 0,
        "react/jsx-uses-vars": 1,
        "comma-dangle": ["error", "never"],
        "no-param-reassign": ["error", { "props": false }],
        "import/extensions": "never"
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config" : {
                    "resolve": {
                        "modules": ["./app/"]
                      }
                }
            }
        }
    }
}